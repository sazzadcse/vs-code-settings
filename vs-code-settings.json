	"acf repeater": {
		"scope": "html,php",
		"prefix": "acfr",
		"body": [
			"<?php if( have_rows('$1') ): ?>",
			"\t<?php while( have_rows('$1') ) : the_row(); ?>\n",
			"\t\t<?php echo get_sub_field('title'); ?>\n\n",
			"\t<?php endwhile; ?>",
			"<?php endif; ?>",
		],
		"description": "acf repeater"
	},
	"acf image": {
		"scope": "html,php",
		"prefix": "acfi",
		"body": [
			"<?php $1image = get_field('image'); ?>",
			"<?php if ($1image) : ?>",
			"\t<img src=\"<?php echo $1image['url']; ?>\" alt=\"<?php echo $1image['alt']; ?>\">",
			"<?php endif; ?>",
		],
		"description": "acf image"
	},
	"acf image sizes": {
		"scope": "html,php",
		"prefix": "acfis",
		"body": [
			"<?php $1image = get_field('image'); ?>",
